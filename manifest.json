{
  "manifest_version": 2,
  "name": "ヤジュッター検索",
  "version": "3.2.0",
  "description": "ヤジュッターのヘッダーに検索機能を追加する拡張機能",
  "browser_specific_settings": {
    "gecko": {
      "id": "Yajutter-Kensaku@ikisugi.in",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "permissions": [
    "storage",
    "https://yajutter.yajuvideo.in/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://yajutter.yajuvideo.in/*"],
      "css": ["src/content.css"],
      "js": [
        "src/lib/api.js",
        "src/lib/filter.js",
        "src/lib/cache.js",
        "src/lib/search-engine.js",
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": false
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
